<!DOCTYPE html>
<html lang="en">
<head>
    <style>

    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL-Shortner</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <div>
        <form method="POST" action="/url">
            <lable for="url">Enter your Original URL</lable>
            <input type="text" id="url" name="url" placeholder="Enter URL">
            <button type="submit">Generate</button>
        </form>
        <% if (locals.id) { %>
            <p> URL Generated : localhost:8080/url/<%= locals.id %> </p>
        <% } else{ %>
    </div>
    <div>
        <table>
            <thead>
                <th>Sr No.</th>
                <th>Short Url</th>
                <th>Redirect Url</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => {%>
                    <tr>
                    <td><%= index+1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <%})%>
               
            </tbody>
        </table>
    </div>
    <% } %>
</body>
</html>